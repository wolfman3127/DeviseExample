<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>. <br>
  User: <%= current_user.username %>
<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :descriptor %>
    <%= form.text_field :descriptor, id: :item_descriptor %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :item_price %>
  </div>
  
      <div class="field">

    <%= form.hidden_field :username, id: :item_username, value: current_user.username %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<% else %>
Please login
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>
