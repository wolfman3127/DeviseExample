<p id="notice"><%= notice %></p>

<h1>Items</h1>
Welcome <%= current_user.email %>

<%= @taylor.inspect %>

<%= button_to "Send This List", sendma_items_path, :class => 'navbar-link'  %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descriptor</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.descriptor %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
